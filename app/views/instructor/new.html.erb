<!-- app/views/users/new.html.erb -->
<%= render 'main/navbar' %>


<div class="container">
    <div class="form-box">
    <div class="row">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 20%;">

    <% if flash[:success] %>
        <%= content_tag :h3, flash[:success], class: 'text-center' %>
    <% elsif flash[:error] %>
        <%= content_tag :h3, flash[:error], class: 'text-center' %>
    <% end %>


    <h1>Sign up</h1>
    <%= form_with model: @user, url: instructor_signup_path, data: {turbo: false} do |f| %>
        <!-- User Fields -->
        <div class="form-field">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, id: 'user_email', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, id: 'user_password', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.label :confirm_password, 'Confirm Password' %>
            <%= f.password_field :confirm_password, id: 'user_confirm_password', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.label :first_name, 'First Name' %>
            <%= f.text_field :first_name, id: 'user_first_name', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.label :last_name, 'Last Name' %>
            <%= f.text_field :last_name, id: 'user_last_name', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.label :referral_code, 'Referral Code' %>
            <%= f.text_field :referral_code, id: 'user_referral_code', class: "form-control" %>
        </div>

        <div class="form-field">
            <%= f.submit 'Sign Up', class: "btn btn-primary" %>
        </div>
    <% end %>

    </div>
</div>
