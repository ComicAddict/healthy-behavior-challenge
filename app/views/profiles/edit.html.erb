<%= render 'main/navbar' %>

<div class="login-container">
  <div class="login-box">
    <% if flash[:notice] %>
      <div class="alert alert-success text-center">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger text-center">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <h2 class="text-center" style="font-weight: 500; margin-bottom: 30px;">Edit Instructor Profile </h2>

    <%= form_for @instructor, url: update_profile_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, value: @user.email, class: 'form-control', readonly: true %>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, value: @instructor.first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, value: @instructor.last_name, class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <%= f.submit 'Update Profile', class: 'btn btn-primary btn-block' %>
          </div>
          <div class="col-md-6">
            <%= link_to 'Cancel', profile_path, class: 'btn btn-default btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
    <div style="position: fixed; bottom: 30px; right: 20px;">
      <a href="<%= url_for(:back) %>" class="btn btn-primary back-btn" style="width: 8rem; height: 4rem; padding: 0.8% 0.3%; margin-right: 2rem; line-height: 3.5rem;">Back</a>
    </div>
  </div>
</div>
