<%= render 'main/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 15%;">
      <% if flash[:notice] %>
        <div class="alert alert-success text-center">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= content_tag :h2, "Edit Instructor Profile", class: 'text-center', style: 'font-weight: 500' %>

      <%= form_for @instructor, url: update_profile_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, value: @user.email, class: 'form-control', readonly: true %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, value: @instructor.first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, value: @instructor.last_name, class: 'form-control' %>
        </div>

        <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
      <% end %>

      <div style="margin: 2% 0">
        <%= link_to 'Cancel', profile_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
