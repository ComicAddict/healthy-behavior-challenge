<%= render 'main/navbar' %>

<% if flash[:notice] %>
  <div class="alert alert-success text-center">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger text-center">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container mt-4" style="margin-top: 5%;">
  <div class="card" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); border-radius: 10px; padding: 2%;">
    <h1 class="card-header text-center mb-0" style="padding: 1%;">Instructor Profile
    <%= image_tag "instructor.png", style: 'width: 75px'%></h1>

    <div class="card-body" style="padding: 2%;">
      <div class="row" >        
          <div class="col-6">
            <h3 style="color: #0080ff; display: inline-block; width: 150px; text-align: left;">Email:</h3>
            <h3 style="display: inline-block;"><%= @user.email %></h3>
          </div>
          <div class="col-6">
            <h3 style="color: #0080ff; display: inline-block; width: 150px; text-align: left;">First Name:</h3>
            <h3 style="display: inline-block;"><%= @instructor.first_name %></h3>
          </div>
          <div class="col-6">
            <h3 style="display: inline-block; width: 150px; color: #0080ff; text-align: left;">Last Name:</h3>
            <h3 style="display: inline-block;"><%= @instructor.last_name %></h3>
          </div>
      </div>
    </div>
    <div class="card-footer text-center" style="margin-bottom:2%">
      <%= link_to "Edit Profile", edit_profile_path(@user.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>