<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <div class="container-fluid">
    <% if @is_instructor || current_user.present? %>
      <a class="navbar-brand" href="<%= user_path(current_user) %>" style="color: white; font-size: 40px;">
        HBC
      </a>
    <% end %>
    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon">Menu</span>
    </button>
    <button  class="btn btn-info">
        <%= link_to 'Home', user_path(current_user), class: 'nav-link', style: 'color: white;', method: :get %>
    </button>
    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav ml-auto">
            <% if @is_instructor %>
              <a><%= link_to 'My Profile', profile_path, class: 'dropdown-item', style: 'color: white;'%></a>
              <a><%= link_to 'Refer Instructor', instructor_referral_path, class: 'dropdown-item' , style: 'color: white;'%></a>
              <a><%= link_to 'View Trainees', view_trainees_path, class: 'dropdown-item' , style: 'color: white;'%></a>
            <% elsif current_user.present? %>
              <a><%= link_to 'My Profile', trainee_profile_path, class: 'dropdown-item', style: 'color: white;' %></a>
            <% end %>
            <a><%= link_to "Sign Out", signout_path, method: :get, class: 'dropdown-item', style: 'color: white;' %></a>
      </ul>
    </div>
  </div>
</nav>


