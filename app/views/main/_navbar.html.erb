          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="font-size: 24px; padding: 13px 16px;">
            <span class="glyphicon glyphicon-menu-hamburger" style="color: white;"></span>
          </a>
          <ul class="dropdown-menu">
            <% if @is_instructor %>
              <li><%= link_to 'My Profile', profile_path %></li>
              <li><%= link_to 'Refer Instructor', instructor_referral_path %></li>
              <li><%= link_to 'View Trainees', view_trainees_path %></li>
            <% elsif current_user.present? %>
              <li><%= link_to 'My Profile', trainee_profile_path %></li>
            <% end %>
