<div>
    <%= render 'main/navbar' %>
    <div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 20%;">
      <form class="well" action="/login" method="post">
        <h3 class="text-center">User Login</h3>
        <div class="form-group">
          <%= label_tag :email, 'Email' %>
          <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password' %>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password' %>
        </div>
        <%= submit_tag 'Log In', class: 'btn btn-primary btn-block' %>
      </form>
    </div>
  </div>
</div>
</div>
