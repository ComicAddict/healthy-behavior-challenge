<%= render 'main/navbar' %>

<div class="container mt-4" style="margin-top: 5%;">
  <% if flash[:notice] %>
    <div class="alert alert-success text-center">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger text-center">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <h1 class="card-title text-center mb-0" style="padding: 1%;">Trainee Profile</h1>

  <div class="card" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); border: 1px solid #000; padding: 2%;">
    <div class="card-body" style="padding: 2%;">
      <div class="row">
        <div class="col-6">
          <h3 style="color: #0080ff; display: inline-block; width: 150px; text-align: left;">Full Name: </h3>
          <h3 style="display: inline-block;"> <%= @trainee.full_name %></h3>
        </div>
        
        <div class="col-6">
          <h3 style="display: inline-block; width: 150px; color: #0080ff; text-align: left;">Height:</h3>
          <h3 style="display: inline-block;"><%= @trainee.height %> cms</h3>
        </div>
          
        <div class="col-6">
          <h3 style="display: inline-block; width: 150px; color: #0080ff; text-align: left;">Weight:</h3>
          <h3 style="display: inline-block;"><%= @trainee.weight %> pounds</h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card-footer text-center">
  <%= link_to 'Back to All Trainees', view_trainees_path, class: "btn btn-secondary" %>
</div>
